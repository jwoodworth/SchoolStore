@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>
<div asp-validation-summary="All"></div>
<form method="post" asp-action="changepwd" asp-controller="account">
    <div class="row">
        <div class="col-md-4">
            <label>Username</label>
        </div>
        <div class="col-md-8">
            <input type="text" name="username" required />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label>Current Password</label>
        </div>
        <div class="col-md-8">
            <input type="password" name="currentPassword" required />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label>New Password</label>
        </div>
        <div class="col-md-8">
            <input type="password" name="newPassword" required />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label>Confirm New Password</label>
        </div>
        <div class="col-md-8">
            <input type="password" name="cfmnewpassword" required />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
            <input type="submit" value="changePWD" />
        </div>
    </div>

</form>

